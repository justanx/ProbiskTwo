@model IEnumerable<PT_Models.Product>

<div class="container p-3 card shadow">
    <div class="row pt-4">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-12 text-right">
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary text-right"><i class="fas fa-plus"></i>&nbsp; Product</a>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Applications
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="10%">@obj.Price</td>
                        <td width="20%">@obj.Category.Name</td>
                        <td width="20%">@obj.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-auto" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn text-info mx-2"><i class="fas fa-edit"></i></a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn text-danger"><i class="far fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exists</p>
    }
</div>
