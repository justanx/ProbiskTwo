@model IEnumerable<PT_Models.ApplicationType>

<div class="container p-3 card shadow">
    <div class="row pt-4">
        <h2 class="text-primary">Application Type List</h2>
    </div>
    <div class="col-12 text-right">
        <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary text-right">
            <i class="fas fa-plus"></i>&nbsp; Application Type
        </a>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="80%">@obj.Name</td>
                    <td class="text-center">
                        <div class="w-auto" role="group">
                            <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id"   class="btn text-info mx-2"><i class="fas fa-edit"></i></a>
                            <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn text-danger "><i class="far fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type Exists</p>
    }
</div>
